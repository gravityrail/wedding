<head>
  <meta charset="utf-8">

  <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame 
       Remove this if you use the .htaccess -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>HTTPSNow</title>
  <meta name="description" content="HTTPSNow">
  <meta name="author" content="Access Now and EFF">

  <!--  Mobile viewport optimized: j.mp/bplateviewport -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Place favicon.ico & apple-touch-icon.png in the root of your domain and delete these references -->
  <link rel="shortcut icon" href="/favicon.ico">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">

  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag 'style' %>
  <%-# stylesheet_link_tag 'handheld', :media=>'handheld' %>
  <%= stylesheet_link_tag 'grid' %>
  <%= stylesheet_link_tag 'formtastic' %>
  <%= stylesheet_link_tag 'formtastic_changes' %>
  <%= stylesheet_link_tag 'access_2' %>
  <!-- Grab Google CDN's jQuery. fall back to local if necessary -->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.5.0/jquery.js"></script>
  <script>!window.jQuery && document.write(unescape('%3Cscript src="/javascripts/libs/jquery-1.5.0.js"%3E%3C/script%3E'))</script>
  <%= javascript_include_tag 'libs/modernizr-1.6.min.js' %>

</head>

<body lang="en" class="help">
  <div id="top_background"></div>
  <div id="container">
    <div id="main" role="main">
    <header>
      <div class="row">
      	<div id="header" class="column grid_5">
      	 A joint project of the <a href="https://www.eff.org">EFF</a> and <a href="https://www.accessnow.org">Access</a>.
        </div>
        <div id="signup" class="column grid_7">
          <%= render :partial=>'shared/signup' %>
        </div>
      </div>

    </header>
      <div class="row">
        <div class="column grid_12">
          <div id="logo">
            <a href="/"><img src="/images/httpsnow_banner.png" alt="HTTPSNow"/></a>
          </div>
          <%= yield(:header) %>
        </div>
      </div>
      
      <div class="row" id="body">
        <div class="column grid_12">
        <%= yield %>
        </div>
      </div>
      <div class="row">
        <div class="column grid_12" id="footer_bottom">
          <div id="footer_logos">
            <a href="https://www.accessnow.org"><img src="/images/access_logo_footer.png" alt="Access Now"/></a>
            <a href="https://www.eff.org"><img src="/images/eff_logo_footer.png" alt="Electronic Frontier Foundation"/></a>
          </div>
          <div id="footer_links">
            <a href="/about">about httpsnow.org</a> | <a href="mailto:info@httpsnow.org">contact us</a>
          </div>
        </div>
      </div>
    </div>
  </div> <!--! end of #container -->

  <!-- JavaScript at the bottom for fast page loading -->
  
  <!-- scripts concatenated and minified via ant build script-->
  <%= javascript_include_tag 'plugins' %>
  <%= javascript_include_tag 'rails' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'libs/jquery.tinywatermark.js' %>
  <%= javascript_include_tag 'httpsnow' %>
  <!-- end concatenated and minified scripts-->
  
  
