<%= content_for :title do %>
<h2>Domain Summary</h2>
<% end %>

<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @domain.name %>
</p>
<p>
  <b>Version:</b>
  <%= @domain.version %>
</p>
<p>
  <b>Uses hsts:</b>
  <%= @domain.uses_hsts %>
</p>

<p>
  <b>Uses https:</b>
  <%= @domain.uses_https %>
</p>

<p>
  <b>Mixed content:</b>
  <%= @domain.mixed_content %>
</p>

<p>
  <b>All https:</b>
  <%= @domain.all_https %>
</p>

<p>
  <b>All identifying:</b>
  <%= @domain.all_identifying %>
</p>

<p>
  <b>Secure cookies:</b>
  <%= @domain.secure_cookies %>
</p>

<p>
  <b>Ssl valid:</b>
  <%= @domain.ssl_valid %>
</p>

<p>
  <b>Key strength:</b>
  <%= @domain.key_strength %>
</p>

<p>
  <b>Notes:</b>
  <%= @domain.notes %>
</p>


<%= link_to raw('&laquo; Domain List'), domains_path %>
| <%= link_to 'Edit', edit_domain_path(@domain) %>

<% if can?(:manage, Domain) %>
<hr />
<h3>Version History</h3>
<ul id="versions">
<% @domain.versions.reverse.each do |version| %>
  <% if(!version.initial?) %>
    <li>
      <b>Version <%= version.number %> </b>
      <p>Date: <%= version.created_at %></p>
      <% if(!version.user_id.nil?) %>
        <% user = User.find(version.user_id) %>
        <p>User: <%= link_to user.name, [:admin, user] %> </p>
      <% end %>
      <p>Changes: 
        <table class="changes">
          <% version.modifications.each do |field, change| %>
            <tr><th><%= field %></th><td><%= change[1] %></td></tr>
          <% end %>
        </table>
      </p>
    </li>
  <% end %>
<% end %>
</ul>
<% end %>